@model IEnumerable<RankingViewModel>
@{
    ViewData["Title"] = "Gwent Pro Ladder Ranking";
}



    <div style="align:center"></div><img src="https://masters.playgwent.com/img/logo-masters-header.3.png"/>
    <div class="row">
        <div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3 class="panel-title">Top 1000</h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                </div>
            </div>
            <table class="table table-striped table-dark">
                <thead>
                    <tr class="filters">
                        <th><input type="text" class="form-control" placeholder="Rank" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Name" disabled></th>
                        <th><input type="text" class="form-control" placeholder="MMR" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Country" disabled></th>
                    </tr>
                </thead>
                <tbody>
              @foreach (RankingViewModel row in Model)
                    {
                        <tr>
                            <td>@row.Rank</td>
                            <td>@row.Name</td>
                            <td>@row.Mmr</td>
                            <td>@row.Country</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>